<%= form_with model: price_sheet_ingredient, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |form| %>
  <%= form.hidden_field :price_sheet_id, value: price_sheet_ingredient.price_sheet_id %>

  <div class="tab mb-4">
    <%= form.label "Ingredient", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :ingredient_id, ingredients.map { |ingredient| [ingredient.name, ingredient.id] }, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="tab mb-4">
    <%= form.label "Price", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :price, step: 0.01, value: price_sheet_ingredient.price.to_s, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
<% end %>
